# Phase 10: Environment Variables Example
# Copy this file to .env and fill in your values

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=production
APP_PORT=8000
LOG_LEVEL=INFO
DEBUG=False

# ============================================
# Security
# ============================================
SECRET_KEY=your-secret-key-here-change-this
API_KEY=your-api-sports-key-here

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://user:password@db:5432/analiz
POSTGRES_DB=analiz
POSTGRES_USER=user
POSTGRES_PASSWORD=change-this-password
POSTGRES_PORT=5432

# ============================================
# Redis
# ============================================
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# ============================================
# API Configuration
# ============================================
API_BASE_URL=https://v3.football.api-sports.io
API_RATE_LIMIT=30
API_TIMEOUT=10

# ============================================
# ML Model Settings
# ============================================
ML_MODEL_CACHE=/app/models
ML_PERFORMANCE_LOG=/app/logs/ml_performance.json
ENABLE_AUTO_RETRAINING=false

# ============================================
# Monitoring
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
ENABLE_MONITORING=true

# ============================================
# Nginx (if used)
# ============================================
NGINX_PORT=80
NGINX_SSL_PORT=443
DOMAIN_NAME=your-domain.com

# ============================================
# Backup
# ============================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d

# ============================================
# Feature Flags
# ============================================
ENABLE_AUTOML=true
ENABLE_DRIFT_DETECTION=true
ENABLE_EXPLAINABILITY=true
ENABLE_REAL_TIME_PREDICTIONS=true

# ============================================
# Performance
# ============================================
WORKERS=4
WORKER_TIMEOUT=120
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000,https://your-frontend.com
ALLOWED_HOSTS=localhost,your-domain.com
